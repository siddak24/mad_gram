rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures - users can upload their own
    match /profilePics/{userId}/{allPaths=**} {
      allow read: if true; // Anyone can view profile pictures
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Post images - users can upload their own posts
    match /posts/{userId}/{allPaths=**} {
      allow read: if true; // Anyone can view post images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
